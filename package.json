{
  "name": "piracema-software",
  "version": "1.0.0",
  "description": "Sistema Piracema - Django + React + Electron",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
    "build": {
    "appId": "com.piracema.software",
    "productName": "Piracema Software",

    "files": [
      "electron/**/*"
    ],

    "extraResources": [
      {
        "from": "frontend/build",
        "to": "frontend/build"
      },
      {
        "from": "backend/dist/django-server",
        "to": "django-server"
      }
    ],

    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}